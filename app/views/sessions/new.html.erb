<h1>Login</h1>
<% if flash[:notice] %>
  <%=flash[:notice] %>
<% end %>
<%= form_with scope: :session, url: login_path, local: true do |f| %>
  <p>
    <%= f.label :email %><br/> 
    <%= f.text_field :email %> 
  </p>

  <p>
    <%= f.label :password %><br/> 
    <%= f.password_field :password %> 
  </p>
  <p>
  <%= f.submit("Login")%>
  </p>
<% end %>
