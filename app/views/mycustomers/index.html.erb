<table class="table table-striped">
  <tr><center>Customes Details </center></tr>
  <tr class="table table-dark">
  <td>Id</td><td>Fisrt Name</td><td>Last Name</td><td>Edit</td><td>Delete</td>
  </tr>
  <% @customers.each do |s| %>
    <tr>
      <td><%=s.id %></td>
      <td><%=s.name %></td>
      <td><%=s.email %></td>
      <td><%=s.phone_number %></td>
      <td><%= button_to 'Edit', edit_customer_path(s), method: 'get',class:"btn btn-dark"%></td>
      <td class=""><%= button_to 'Remove', customer_path(s), method: 'delete',class:"btn btn-danger"%></td>  
    </tr>
  <% end %>
</table>
<%= link_to "Add a New Customer", new_customer_path %> <br/>
