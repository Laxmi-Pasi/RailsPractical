<%= form_with(model: @user) do |form| %>
  <div style="height:50%;width:50%;margin-left:25%;" class="row"> 
    
    <div class="mb-3 row">
      <%= form.label :name, class:"col-sm-3 col-form-label"%>
      <div class="col-sm-9">
      <%= form.text_field :name, class:"form-control" %>
      </div>
    </div>
    <div class="mb-3 row">   
      <%= form.label :email, class:"col-sm-3 col-form-label" %>
      <div class="col-sm-9">
      <%= form.email_field :email,class:"form-control" %>
      </div>
    </div>
     <div class="mb-3 row">   
      <%= form.label :picture, class:"col-sm-3 col-form-label" %>
      <div class="col-sm-9">
      <%= form.file_field :picture,class:"form-control" %>
      </div>
    </div>
    <div  class="mb-3 btn">
      <%=form.submit "Submit" %>
    </div>
</div>
<% end %>
