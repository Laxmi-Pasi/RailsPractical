<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>
  <p>
    <strong>Title:</strong>
    <%= product.title %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= product.description%>
  </p>
  <p>
    <strong>price:</strong>
    <%= product.price %>
  </p>
  <p>
    <strong>capacity:</strong>
    <%= product.capacity %>
  </p>
  <p>
    <strong>Is Active:</strong>
    <%= product.is_active %>
  </p>
  <p>
    <strong>Status:</strong>
    <%= product.status %>
  </p>
  <p style="color:red">
    <strong>No of orders for this product is :</strong>
    <%= Order.where('product_id=?',product).count %>
  </p>

</div>
