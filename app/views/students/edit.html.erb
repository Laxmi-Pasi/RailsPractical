
<h2>edit student</h2>
<% if !@student.valid? %>
  <div id="error_explanation">
    <h2><%= pluralize(@student.errors.count, "error") %> prohibited this article from being saved:</h2>

    <ul>
      <% @student.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @student do |form| %>
    
    <div>
      <%= form.label :first_name, style: "display: block" %>
      <%= form.text_field :first_name %>
    </div>
  
    <div>   
      <%= form.label :last_name, style: "display: block" %>
      <%= form.text_field :last_name %>
    </div>
    
    <div>
      <%= form.label :DOB, style: "display: block" %>
      <%= form.date_field :DOB %>
    </div>
    
    <div>
      <%= form.label :department, style: "display: block" %>
      <%= form.text_field :department %>
    </div>
    <div>
      <%= form.label :terms_of_service, style: "display: block" %> 
      <%=form.check_box :terms_of_service %>
    </div>
    <div>
      <%= form.submit %>
    </div>
<% end %>
 