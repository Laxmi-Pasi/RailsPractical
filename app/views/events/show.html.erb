<h2>Event Details </h2>
<div>
  <p>
    <strong>Event Id:</strong>
    <%= @event.id %>
  </p>
  <p>
    <strong>Name:</strong>
    <%= @event.name %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= @event.description%>
  </p>
  <p>
    <strong>Event Date:</strong>
    <%= @event.event_date %>
  </p>
  <p>
    <strong>user id </strong>
    <%= @event.user_id %>
  </p>
  <p>
    <strong>Comments:</strong><br/>
    <% @event.comments.each do |comment| %>
      <%=comment.content %><br/>
    <% end %>
  </p>
</div>

<div>
  <%= link_to "Edit this event", edit_event_path(@event) %> <br/><br/>
  <% if logged_in? %>
    <%= link_to "Back to events", user_path(session[:user_id])  %>
  <% else %>
    <%= link_to "Back to events", events_path  %>
  <% end %>

  <%= button_to "Destroy this event", @event, method: :delete %>
</div>
